function HandleStuck(dist, byref going_where) // FUNÇÃO ADD
	if ( !lastdistance )
		lastdistance := dist;
	elseif( lastdistance <= dist )
		stuck += 1;
	else
		if(stuck > 0 )
			stuck := 0; 
		endif
		lastdistance := dist;
	endif
	if( stuck == 5 )
		going_where := 0;
		wait_time := 1;
		stuck := 0;
		lastdistance := 0;
	endif
endfunction // FIM FUNÇÃO ADD

function IsItACommand(speech) // FUNÇÃO ADD
	var meus_comandos := GetObjProperty(me, "cmds");
	var cmd_keys := meus_comandos.Keys();
	foreach thing in cmd_keys
		var cmd := meus_comandos[thing];
		if( speech[cmd.singular] || speech[cmd.plural] )
			return lower(thing);
		endif
	endforeach
	
	return 0;
endfunction // FIM FUNÇÃO ADD

