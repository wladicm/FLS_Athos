function CastFaerieHeal(me, owner)

	PrintText(me, "*bate as asas*");
	PlaysoundEffect(me, 1137);
	PlayObjectCenteredEffect( owner, 0x373a, 7, 0x10 );

	var amt := RandomDiceRoll("1d10") + 20;
	HealDamage(owner, amt);
	SetCooldown(me, "heal", 150);

endfunction

